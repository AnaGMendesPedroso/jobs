<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/jobs_secundario"
    tools:context=".ListagemVagasActivity">

    <include layout="@layout/toolbar" />

    <TextView
        android:id="@+id/textViewDeixaJobsTeAjudar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="@string/jobs_aqui_voc_encontra_o_emprego_dos_sonhos"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textViewVagasVazia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="@string/ainda_n_o_temos_vagas_cadastradas"
        android:textSize="20sp"
        android:textStyle="italic"
        tools:visibility="visible" />

    <Button
        android:id="@+id/atualizarVagas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:onClick="atualizarVagas"
        android:text="@string/atualizar_vagas" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listViewVagas"/>


</LinearLayout>